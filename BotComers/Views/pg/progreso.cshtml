                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CadA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CadB)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MusloSuperior)
                                        </td>
                                        <td style="display:none;">
                                            @Html.DisplayFor(modelItem => item.MusloBajo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pantorrilla)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrazoNormal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrazoFlexionado)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Munieca)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gluteos)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
