<div class="container-fluid page__container" >
   
    <div class="container-fluid page__heading-container">
        <div class="page__heading d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-lg-between text-center text-lg-left">
            <h3 class="m-lg-0">Historial de peso y medidas</h3>            
        </div>
    </div>

    <div class="container-fluid page__container">     
        <div class="row">

            <div class="col-lg-12">
                <div class="card">

                    <div class="table-responsive border-bottom">
                        @*style="width: 37px;"*@
                        <table class="table mb-0 thead-border-top-0">
                            <thead>
                                <tr>
                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Proxima medida
                                    </th>
                                    <th>
                                        Diagnóstico
                                    </th>
                                    <th>
                                        Antecedentes Medicos
                                    </th>
                                    <th>
                                        Experiencia Entrenando
                                    </th>
                                    <th>
                                        Objetivos
                                    </th>
                                    <th>
                                        Edad
                                    </th>
                                    <th>
                                        Estatura
                                    </th>
                                    <th>
                                        Peso Corporal
                                    </th>
                                    <th>
                                        Peso Muscular
                                    </th>
                                    <th>
                                        % Grasa
                                    </th>
                                    <th>
                                        % Agua
                                    </th>
                                    <th>
                                        Grasa Visceral
                                    </th>
                                    <th>
                                        IMC
                                    </th>
                                    <th>
                                        Cuello
                                    </th>
                                    <th>
                                        Circuns. del Torax
                                    </th>
                                    <th>
                                        Cintura
                                    </th>
                                    <th>
                                        Cintura Baja
                                    </th>
                                    <th>
                                        Cadera
                                    </th>
                                    <th>
                                        Muslo
                                    </th>
                                    <th>
                                        Pantorrilla
                                    </th>
                                    <th>
                                        Brazo Relajado
                                    </th>
                                    <th>
                                        Brazo Contraído
                                    </th>
                                    <th>
                                        Muñeca
                                    </th>
                                    <th>
                                        Gluteos
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="list">

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.strFechaIngreso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.strFechaVencimiento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Comentario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AntecedentesMedicos)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ExpEntrenamiento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Edad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estatura)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PesoCorporal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PesoGraso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PorcentajeGrasa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PorcentajeAgua)
