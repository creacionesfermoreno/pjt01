<section class="appointment top-space" id="register">
    <div class="container">

        <div class="row">

            <div class="col-sm-6 col-md-7">

                <div class="section-title left-aligned">
                    <h2>POR QUÉ LA  <span class="text-highlight" style="color:#f23849;">SALUD</span> ES IMPORTANTE</h2>
                    <h3 class="subline">Entrena con más de 900 personas en vivo.</h3>
                    <hr style="border-color:#f23849;">
                </div>
                
                <img src="~/Content/appInicio/images/sesionlandingvivo.jpg" class="img-responsive" alt="Yoga Pose">

            </div>
            <!-- // end .col -->

            <div class="col-sm-6 col-md-5">

                <div class="appointment-form top-space-lg">

                    <div class="form-header" style="background-color:#f23849;border: 1px #e93646 solid;">
                        <h4>ENTRENA EN VIVO</h4>
                        <a href="tel:8003456789">Llama: (001) 345 6789</a>

                        <div class="or_icon">O</div>
                    </div>

                    <form action="php/contact.php" id="phpcontactform" method="POST">

                        <div class="form-group">
                            <label>Nombre completo</label>
                            <input type="text" class="form-control" name="name" style="border: 1px solid #caced1" required title="Your full name please">
                        </div>
                        <div class="form-group">
                            <label>Correo</label>
                            <input type="email" class="form-control" name="email" style="border: 1px solid #caced1" required title="We need your email address">
                        </div>
                        <div class="form-group">
                            <label>Celular</label>
                            <input type="text" class="form-control" name="phone" style="border: 1px solid #caced1" required title="Please enter your phone number">
                        </div>

                        <div class="text-center top-space" style="background-color:#f23849;">
                            <button type="submit" style="background-color:#f23849;border: 1px #e93646 solid;" class="btn btn-success btn-block btn-xl" id="js-contact-btn">Enviar datos</button>
                        </div>

                    </form>
                </div>

            </div>
            <!-- // end .col -->

        </div>
        <!-- // end .row -->

    </div>
    <!-- end .container -->
</section>

