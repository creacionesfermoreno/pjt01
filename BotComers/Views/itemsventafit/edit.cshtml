    <script type="text/javascript">
        $(document).ready(function () {

            SEGListarPerfilMenu();
            $('#buscarImagen').change(function () {
                var File = this.files;
                if (File && File[0]) {
                    ReadImage(File[0]);
                }
            });
        });

        var ReadImage = function (file) {

            var reader = new FileReader;
            var image = new Image;

            reader.readAsDataURL(file);
            reader.onload = function (_file) {

                image.src = _file.target.result;
                image.onload = function () {
                    var height = this.height;
                    var width = this.width;
                    var type = file.type;
                    var size = ~~(file.size / 1024) + "KB";

                    $("#imgVistaImagen").attr('src', _file.target.result);
                    $("#txtDetalle").val("Size:" + size + ", " + height + " X " + width + ", " + type + "");
                    $("#hdheight_imagen").val(height);
                    $("#hdwidth_imagen").val(width);
                    if (parseInt(height) > 450) {
                        $.bootstrapGrowl("El alto de la imagen no puede ser mayor 450, seleccione otra imagen.", { type: 'danger', width: 'auto' });
                    } else if (parseInt(width) > 450) {
                        $.bootstrapGrowl("El ancho de la imagen no puede ser mayor 450, seleccione otra imagen.", { type: 'danger', width: 'auto' });
                    }
                }

            }
        }

        var ActualizarFoto = function () {

            var NombreProducto = $("#txtItemsventa_Nombre").val();
            var CodigoItemVenta = $("#hdCodigoItemVenta").val();
            var CodigoImagen = $("#hdCodigoImagen").val();
            var file = $("#buscarImagen").get(0).files;

            var detalle = $("#txtDetalle").val();
            var height = $("#hdheight_imagen").val();
            var width = $("#hdwidth_imagen").val();

            if (CodigoItemVenta == '') {
                $.bootstrapGrowl("Falta el codigo del producto.", { type: 'danger', width: 'auto' });
                return false;
            } else if (CodigoImagen == '') {
                $.bootstrapGrowl("Falta el codigo del producto.", { type: 'danger', width: 'auto' });
                return false;
            } else if (detalle == '') {
                $.bootstrapGrowl("Falta seleccionar una nueva imagen.", { type: 'danger', width: 'auto' });
                return false;
            } else if (parseInt(height) > 450) {
                $.bootstrapGrowl("El alto de la imagen no puede ser mayor 450.", { type: 'danger', width: 'auto' });
                return false;
            } else if (parseInt(width) > 450) {
                $.bootstrapGrowl("El ancho de la imagen no puede ser mayor 450.", { type: 'danger', width: 'auto' });
                return false;
            } else if (file == undefined || file == null) {
                $.bootstrapGrowl("Falta seleccionar una nueva imagen.", { type: 'danger', width: 'auto' });
                return false;
            }

            var data = new FormData;
            data.append("ImageFile2", file[0]);
            data.append("CodigoItemVenta", CodigoItemVenta);
            data.append("CodigoImagen", CodigoImagen);

            document.getElementById('loadMe').style.display = 'block';
            $.ajax({
                type: "Post",
                url: "/itemsventafit/ActualizarFotoItemsVenta",
                data: data,
                contentType: false,
                processData: false,
                success: function (response) {
                    $.bootstrapGrowl("La imagen de " + NombreProducto + " ha sido guardada correctamente.", { type: 'success', width: 'auto' });
                }, complete: function () {
                    document.getElementById('loadMe').style.display = 'none';
                }
            })

        }

