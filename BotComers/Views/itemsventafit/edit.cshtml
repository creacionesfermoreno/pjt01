                        $('[data-controlmodulo="' + msg[i].CodigoMenu + '"]').show('fast');
                    }
                }

            };
            var metodoError = function (msg) {
                alert(msg);
            };
            var request = {
                //request: entidad
            };
            LlamarAJAX("/itemsventa/SEGListarPerfilMenu", request, metodoCorrecto, metodoError);

        }
    </script>
