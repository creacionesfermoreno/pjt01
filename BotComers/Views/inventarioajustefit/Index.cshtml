    <script type="text/javascript">

        $(document).ready(function () {
            var todayDate = new Date();

            $('input[id="txtInventarioAjuste_FechaAjusteInicio"]').kendoDatePicker();
            var Primerdia = new Date(todayDate.getFullYear(), todayDate.getMonth(), 1);
            $('input[id="txtInventarioAjuste_FechaAjusteInicio"]').data("kendoDatePicker").value(Primerdia);

            $('input[id="txtInventarioAjuste_FechaAjusteFin"]').kendoDatePicker();
            var ultimoDia = new Date(todayDate.getFullYear(), todayDate.getMonth() + 1, 0);
            $('input[id="txtInventarioAjuste_FechaAjusteFin"]').data("kendoDatePicker").value(ultimoDia);

            SEGListarPerfilMenu();

            $('#btnCerarmyModalInventarioActualizado').click(function () {
                document.getElementById('myModalInventarioActualizado').style.display = 'none';
            });

        });

        function buscarHistorialAjusteInventario() {
            document.getElementById('loadMe').style.display = 'block';
            var b_FechaAjusteInicio = kendo.toString($("#txtInventarioAjuste_FechaAjusteInicio").data('kendoDatePicker').value(), 'MM/dd/yyyy');
            var b_FechaAjusteFin = kendo.toString($("#txtInventarioAjuste_FechaAjusteFin").data('kendoDatePicker').value(), 'MM/dd/yyyy');
            var PageNumber = 1;

            var metodoCorrecto = function (data) {
                var content_A = new Array();
                document.getElementById('loadMe').style.display = 'none';
                if (data.length > 0) {
                    for (var i = 0; i < data.length; i++) {

                        content_A.push('<tr>');
                        content_A.push('<td>');
                        content_A.push(data[i].CodigoItemsVentaAjusteInventario);
                        content_A.push('</td>');
                        content_A.push('<td>');
                        content_A.push(data[i].DesFechaAjuste);
                        content_A.push('</td>');
                        content_A.push('<td>');
                        content_A.push(data[i].DesAlmacen);
                        content_A.push('</td>');
                        content_A.push('<td>');
                        content_A.push(data[i].TotalAjuste);
                        content_A.push('</td>');
                        content_A.push('<td>');
                        content_A.push(data[i].Observaciones);
                        content_A.push('</td>');
                        content_A.push('<td>');
                        content_A.push(data[i].UsuarioCreacion);
                        content_A.push('</td>');
                        content_A.push('<td>');

                        content_A.push('<button class="btn btn-primary btn-sm btn-block mg-b-10" onclick="verProductos(' + data[i].CodigoItemsVentaAjusteInventario + ');">Ver Productos</button>');
                        content_A.push('<i style="display:none;" class="fa fa-eye tx-18" style="cursor:pointer;"></i>');
                        content_A.push('<a style="display:none;" href="/itemsventa/edit/' + data[i].CodigoItemsVentaAjusteInventario + '"><i class="fa fa-pencil tx-18" style="cursor:pointer;"></i></a>');
                        content_A.push('<i style="display:none;" class="fa fa-plug tx-18" style="cursor:pointer;"></i>');
                        content_A.push('<a style="display:none;" href="" data-toggle="modal" data-target="#modalConfirmarEliminacion" onclick="SeleccionarFilaItemsVenta(' + data[i].CodigoItemsVentaAjusteInventario + ');"><i class="fa fa-close tx-18" style="cursor:pointer;"></i></a>');

                        content_A.push('</td>');
                        content_A.push('</tr>');

                    }
                    $('#gridEmpresa tbody').html(content_A.join(' '));
                } else {
                    $('#gridEmpresa tbody').html('');
                }

            };

            var metodoError = function (msg) {
                alert(msg);
            };
            var request = {
                b_FechaAjusteInicio: b_FechaAjusteInicio,
                b_FechaAjusteFin: b_FechaAjusteFin,
                PageNumber: PageNumber
            };

            LlamarAJAX('/inventarioajustefit/ListarItemsVentaAjusteInventario_Paginacion', request, metodoCorrecto, metodoError);
        }

        function verProductos(CodigoItemsVentaAjusteInventario) {

            document.getElementById('loadMe').style.display = 'block';
          
            var metodoCorrecto = function (data) {
                
                document.getElementById('loadMe').style.display = 'none';
                document.getElementById('myModalInventarioActualizado').style.display = 'block';
              
                if (data.Success) {
                    if (data.List.length > 0) {

                        var content_A = new Array();
                        for (var i = 0; i < data.List.length; i++) { //data.length

                            content_A.push('<tr>');
                            content_A.push('<td>');
                            content_A.push('<img src="' + data.List[i].UrlImagen +'" class="card-img-top " alt="">');
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].NombreItemVenta);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].CantidadActual);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].DesTipoAjuste);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].CantidadAjuste);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].CantidadFinal);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].CostoUnidad);
                            content_A.push('</td>');
                            content_A.push('<td>');
                            content_A.push(data.List[i].TotalAjuste);
                            content_A.push('</td>');
                            content_A.push('</tr>');

                        }

                        $('#gridAjusteInventario tbody').html(content_A.join(' '));

                    } else {

                        $('#gridAjusteInventario tbody').html('');

                    }
                }
                

            };

            var metodoError = function (msg) {
                alert(msg);
            };
            var request = {
                CodigoItemsVentaAjusteInventario: CodigoItemsVentaAjusteInventario
            };

            LlamarAJAX('/inventarioajustefit/ecommerce_uspListarItemsVentaAjusteInventarioDetalle', request, metodoCorrecto, metodoError);

